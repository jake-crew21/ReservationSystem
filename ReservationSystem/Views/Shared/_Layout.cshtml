<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReservationSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReservationSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/css/dropzone.min.css"/>*@
</head>
<body>
    <header id="header">
        <nav class="navbar fixed-top">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="logo">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bean Scene</a>
                    </div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">About</a>
                        </li>
                        @{
                            if (this.User.IsInRole("Admin") || this.User.IsInRole("Staff"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Reservation" asp-action="Index">Reservations</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Table" asp-action="Index">Tables</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="SittingSchedule" asp-action="Index">Sitting Schedule</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Sitting" asp-action="Index">Sittings</a>
                                </li>
                            }
                            else if (this.User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Reservation" asp-action="UserIndex">Reservations</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="main">
        <main role="main" class="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ReservationSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="~/js/dropzone.min.js"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
