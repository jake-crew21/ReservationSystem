@model IEnumerable<ReservationSystem.Models.Reservation>
<!-- https://kontext.tech/article/234/retrieve-identity-username-email-and-other-information-in-aspnet-core -->
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}

@{
    ViewData["Title"] = "UserIndex";
}

<h1>@user.FirstName Reservations</h1>

<p>
    <a asp-action="ReservationRequest">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfPpl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfTable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfPpl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfTable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @item.StartTime.ToShortTimeString()
            </td>
            <td>
                @item.ResDate.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { contact = item.Contact, date = item.ResDate, time = item.StartTime }) |
                @Html.ActionLink("Details", "Details", new { contact = item.Contact, date = item.ResDate, time = item.StartTime }) |
                @Html.ActionLink("Delete", "Delete", new { contact = item.Contact, date = item.ResDate, time = item.StartTime })
            </td>
        </tr>
}
    </tbody>
</table>
